<UserControl x:Class="JetBrainsLicenseObtainer.Views.UserControls.KeysUCView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:JetBrainsLicenseObtainer.ViewModels"
             xmlns:local="clr-namespace:JetBrainsLicenseObtainer.Views.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800"
             Background="White">
    <UserControl.DataContext>
        <vm:KeysUCViewModel />
    </UserControl.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="18" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <!--#region Menu-->

        <Menu Grid.Row="0">
            <MenuItem Header="File">
                <MenuItem Header="Export to csv"
                          Command="{Binding ExportToCsvCommand}"/>
                <MenuItem Header="Send selected key to Outdated keys"
                          Command="{Binding SendToOutdatedKeysCommand}" />
                <MenuItem Header="Copy selected key"
                          Command="{Binding CopySelectedKeyCommand}" />
            </MenuItem>
        </Menu>

        <!--#endregion-->

        <!--#region Keys DataGrid-->

        <DataGrid x:Name="keysGrid"
                  Grid.Row="1"
                  Margin="15"
                  AutoGenerateColumns="False"
                  HorizontalGridLinesBrush="DarkGray"
                  RowBackground="#DCDCDC"
                  AlternatingRowBackground="White"
                  IsReadOnly="True"
                  ItemsSource="{Binding Keys}"
                  SelectedItem="{Binding SelectedKey}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Key"
                                    Width="60*"
                                    Binding="{Binding LicenseKey}" />
                <DataGridTextColumn Header="Registration date"
                                    Width="50*"
                                    Binding="{Binding RegistrationDate, StringFormat=\{0:dd.MM.yyyy HH:mm:ss\}}" />
                <DataGridTextColumn Header="Expiration date"
                                    Width="50*"
                                    Binding="{Binding ExpirationDate, StringFormat=\{0:dd.MM.yyyy HH:mm:ss\}}" />
            </DataGrid.Columns>
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Send to Outdated keys"
                              Command="{Binding SendToOutdatedKeysCommand}" />
                    <MenuItem Header="Copy key"
                              Command="{Binding CopySelectedKeyCommand}" />
                </ContextMenu>
            </DataGrid.ContextMenu>
        </DataGrid>

        <!--#endregion-->
    </Grid>
</UserControl>
